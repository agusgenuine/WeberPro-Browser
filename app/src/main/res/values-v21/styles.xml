<resources>

    <style name="BrowserActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryDark">@color/blue_700</item>
        <item name="colorAccent">@color/blue_500</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHighlight">@color/blue_200</item>
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:drawSelectorOnTop">true</item>
        <item name="alertDialogTheme">@style/AlertDialogStyle</item>
        <item name="android:autoCompleteTextViewStyle">@style/AutoCompleteTextViewStyle</item>
    </style>

    <style name="ReadabilityActivityTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:colorAccent">@color/blue_500</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHighlight">@color/blue_200</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:drawSelectorOnTop">true</item>
        <item name="android:alertDialogTheme">@style/AlertDialogStyle</item>
    </style>

    <style name="SettingActivityTheme" parent="Theme.AppCompat.Light">
