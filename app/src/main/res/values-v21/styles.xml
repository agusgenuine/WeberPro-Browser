    <style name="WhitelistActivityTheme" parent="Theme.AppCompat.Light" >
        <item name="colorAccent">@color/blue_500</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHighlight">@color/blue_200</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:drawSelectorOnTop">true</item>
        <item name="android:alertDialogTheme">@style/AlertDialogStyle</item>
        <item name="android:dialogTheme">@style/AlertDialogStyle</item>
    </style>

    <style name="TokenActivityTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorAccent">@color/blue_500</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHighlight">@color/blue_200</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:drawSelectorOnTop">true</item>
        <item name="android:alertDialogTheme">@style/AlertDialogStyle</item>
        <item name="android:dialogTheme">@style/AlertDialogStyle</item>
    </style>

    <style name="ClearActivityTheme" parent="Theme.AppCompat.Light">
        <item name="android:colorAccent">@color/blue_500</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHighlight">@color/blue_200</item>
        <item name="android:colorControlActivated">@color/blue_500</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:drawSelectorOnTop">true</item>
        <item name="android:alertDialogTheme">@style/AlertDialogStyle</item>
    </style>

    <style name="AutoCompleteTextViewStyle" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:popupElevation">@dimen/elevation_2dp</item>
        <item name="android:popupBackground">@color/white</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:colorAccent">@color/blue_500</item>
        <item name="colorAccent">@color/blue_500</item>
        <item name="android:colorPrimary">@color/blue_600</item>
        <item name="android:keyTextColor">@color/blue_500</item>
        <item name="android:colorButtonNormal">@color/blue_500</item>
        <item name="android:positiveButtonText">@string/dialog_button_positive</item>
        <item name="android:negativeButtonText">@string/dialog_button_negative</item>
        <item name="android:textColor">@color/blue_500</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textDirection">rtl</item>
        <item name="android:colorControlActivated">@color/blue_500</item>
        <!--<item name="android:background">@color/white</item>-->
    </style>

    <style name="MyMaterialTheme" parent="MyMaterialTheme.Base">
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>
        <item name="android:windowBackground">@drawable/app_background</item>
    </style>

    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/blue_500</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHighlight">@color/blue_200</item>
        <item name="colorControlActivated">@color/blue_500</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:drawSelectorOnTop">true</item>
        <item name="alertDialogTheme">@style/AlertDialogStyle</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="PopupTheme" parent="Theme.AppCompat.Light.Dialog">
        <!--<item name="android:windowIsFloating">false</item>-->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowSoftInputMode">stateAlwaysHidden</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowIsTranslucent">true</item>

        
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <!--<item name="android:windowBackground">@drawable/app_background</item>-->
    </style>

    <style name="AboutActivityStyle" parent="MaterialTheme.Light">
        <item name="android:colorPrimaryDark">@color/blue_800</item>
    </style>

    <style name="holderStyle" parent="android:Theme.NoDisplay">

    </style>

</resources>