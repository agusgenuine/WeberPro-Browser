<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="105dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/single_download_item_layout"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        card_view:cardElevation="8dp"
        card_view:cardUseCompatPadding="true">
        
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/img_download_status"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_download_resume" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:paddingLeft="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_download_progress_file_name"
            android:layout_marginTop="19dp"
            android:layout_marginLeft="50dp"
            android:background="@color/transparent"
            android:textSize="15sp"
            android:lines="1"
            android:text="Unknown"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="14dp"
            android:layout_alignParentBottom="true"
            android:background="@color/transparent">
            <com.daasuu.ahp.AnimateHorizontalProgressBar
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/progress_download_info"
                app:ahp_backgroundColor="@color/textColorPrimary"
                app:ahp_progressColor="@color/blue_500"
                app:ahp_cornerRadius="3dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_download_progress_downloaded_size"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="5dp"
                android:textSize="12sp"
                android:text="0KB/0KB"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_download_progress_speed"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textSize="12sp"
                android:text="0kB/S"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_download_progress_remaining_time"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="5dp"
                android:textSize="12sp"
                android:text="00:00"/>
        </RelativeLayout>
    </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>